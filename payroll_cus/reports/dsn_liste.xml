                                    <tr>
                                        <t>
                                            <td align="left">
                                                <span t-esc="o.code"/>
                                            </td>
                                            <td align="left">
                                                <span t-esc="o.rais"/>
                                            </td>
                                            <td align="right">
                                                <span t-esc="o.siret"/>
                                            </td>
                                            <td align="right">
                                                <span t-esc="o.regime"/>
                                            </td>
                                        </t>    
